extends common/layout

block style
  link(rel="stylesheet", href="/styles/result.css")

block content
  section(class="container-fluid")
    button(id="copy-btn" type="button" class="btn btn-primary btn-sm pull-right" data-toggle="popover" data-content="Copy to clipboard") Copy
    table(id="result-table" class="table table-striped tablesorter")
      thead
        tr
          th
            span クエリ
          th
            span クリック数
            i(class="glyphicon glyphicon-resize-vertical")
          th
            span 表示回数
            i(class="glyphicon glyphicon-resize-vertical")
          th
            span CTR
            i(class="glyphicon glyphicon-resize-vertical")
      tbody
        - for (var i = 0; i < data.length; i++)
          tr
            td= data[i].word
            td= data[i].clickNum
            td= data[i].dispNum
            td= data[i].ctr

block script
  script(type="text/javascript", src="/components/jquery.tablesorter/jquery.tablesorter.min.js")
  script(type="text/javascript", src="/scripts/result.js")
