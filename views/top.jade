extends common/layout

block style
  link(rel="stylesheet", href="/styles/top.css")

block content
  section(class="container-fluid")
    div(id="drop-zone")
      span Drop CSV file here
    div(class="progress")
      div(class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;") 0%
    output(id="file-list")
    
    form(action="/result" method="post")
      div(class="text-center")
        button(type="submit" class="btn btn-primary btn-lg" disabled) Submit
        input(type="hidden" name="data" value="")

block script
  script(type="text/javascript", src="/scripts/top.js")
